@page "/admin"
@rendermode InteractiveServer
@inject FirestoreService FirestoreService

<h2>🛠 Adminpanel</h2>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="SeedProjectsAsync">Lägg till exempelprojekt</button>
</div>

@if (successMessage != null)
{
    <div class="alert alert-success">@successMessage</div>
}
@if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
}

@code {
    private string? successMessage;
    private string? errorMessage;

    private async Task SeedProjectsAsync()
    {
        try
        {
            await FirestoreService.SeedProjectsAsync();
            successMessage = "Projekten har lagts till i Firestore!";
            errorMessage = null;
        }
        catch (Exception ex)
        {
            successMessage = null;
            errorMessage = $"Ett fel uppstod: {ex.Message}";
        }
    }
}
