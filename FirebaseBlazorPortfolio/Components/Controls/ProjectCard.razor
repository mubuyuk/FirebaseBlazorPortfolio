

<div class="project-card d-flex flex-column">
    <div class="project-image-container mb-3">
        @if (!string.IsNullOrWhiteSpace(Project.ImageUrl))
        {
            <img src="@Project.ImageUrl" class="img-fluid rounded" alt="@Project.Title" />
        }
        else
        {
            <div class="no-image-placeholder d-flex align-items-center justify-content-center">
                <i class="fas fa-image fa-2x text-muted"></i>
            </div>
        }
    </div>

    <h5 class="project-title text-white">@Project.Title</h5>

    <p class="project-description text-white-50 flex-grow-1">
        @Project.Description
    </p>

    @if (Project.Tags?.Any() == true)
    {
        <div class="mt-2">
            @foreach (var tag in Project.Tags)
            {
                <span class="badge bg-secondary me-1">@tag</span>
            }
        </div>
    }

    <a href="@Project.Link" target="_blank" class="mt-3 text-success fw-bold text-decoration-none">
        <i class="fab fa-github me-1"></i> GitHub
    </a>
</div>


@code {
    [Parameter]
    public Project Project { get; set; } = default!;
}
